#include <dt-bindings/zmk/matrix_transform.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <layouts/foostan/corne/5column.dtsi>

&foostan_corne_5col_layout {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &default_kscan;
        zmk,physical-layout = &foostan_corne_5col_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <4>;
// | SW1  | SW2  | SW3  | SW4  | SW5  |   | SW5  | SW4  | SW3  | SW2  | SW1  |     | SW1 |
// | SW6  | SW7  | SW8  | SW9  | SW10 |   | SW10 | SW9  | SW8  | SW7  | SW6  |     | SW2 |
// | SW11 | SW12 | SW13 | SW14 | SW15 |   | SW15 | SW14 | SW13 | SW12 | SW11 |     | SW3 |
//               | SW16 | SW17 | SW18 |   | SW18 | SW17 | SW16 |                   | SW4 |
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)   RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)  RC(0,10)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)   RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)  RC(1,10)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)   RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)  RC(2,10)
                RC(3,2) RC(3,3) RC(3,4)   RC(3,5) RC(3,6) RC(3,7)                  RC(3,10)
        >;
    };

    default_kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "row2col";
        row-gpios
            = <&pro_micro 4 GPIO_ACTIVE_HIGH>
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>
            , <&pro_micro 6 GPIO_ACTIVE_HIGH>
            , <&pro_micro 7 GPIO_ACTIVE_HIGH>
            ;

    };

    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        pd0_split: pd0_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    pd0_listener: pd0_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&pd0_split>;
    };

};


